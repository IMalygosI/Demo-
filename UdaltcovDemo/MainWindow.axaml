<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1900" d:DesignHeight="980"
		MaxHeight="980" MaxWidth="1900"
		MinHeight="650" MinWidth="1000"
		x:CompileBindings="False"
		WindowStartupLocation="CenterScreen"
        x:Class="UdaltcovDemo.MainWindow"
        Title="Вход">
	<Border BorderThickness="2"
			BorderBrush="OrangeRed">
		<Grid ShowGridLines="False"
			  Background="Wheat"
			  ColumnDefinitions="*,*,*"
			  RowDefinitions="*,*,*">
			<StackPanel Grid.Column="1"
						Grid.Row="1"
						HorizontalAlignment="Center"
						VerticalAlignment="Center">
					<TextBox Watermark="Логин"
							 Margin="0 5 0 0"
							 Name="login"
							 CornerRadius="10"
							 Text=""
							 Height="30"
							 Width="200"/>
				<TextBox Watermark="Пароль"
						 Margin="0 5 0 0"
						 Name="password"
						 CornerRadius="10"
						 Text=""
						 Height="30"
						 Width="200"/>
				<Button Name="VOITI"
						Click="Button_Click_Vxod"
						CornerRadius="10"
						Height="30"
						Width="200"
						BorderThickness="2"
						BorderBrush="Black"
						Background="Green"
						Margin="0 5 0 0">
					<TextBlock Text="Войти"
							   HorizontalAlignment="Center"
							   Foreground="White"/>
				</Button>
				<Button Name="guest"
						Click="Button_Click_guest"
						CornerRadius="10"
						Height="30"
						Width="200"
						BorderThickness="2"
						BorderBrush="Black"
						Background="Gray"
						Margin="0 5 0 0">
					<TextBlock Text="Войти как гость"
							   HorizontalAlignment="Center"
							   Foreground="White"/>
				</Button>
			</StackPanel>
		</Grid>
	</Border>
</Window>
